<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context="com.example.LuyenPA.Activities.SuaTuPaActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFF9F1"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <TextView
            android:text="Sửa từ vựng"
            android:gravity="center"
            android:textSize="10pt"
            android:textColor="#E67E22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edtSuaMaTu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mã từ vựng"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/edtSuaTiengAnh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập từ tiếng anh"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/edtSuaNguAm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ngữ âm của từ"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/edtSuaTiengViet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập từ tiếng việt"
            android:layout_marginTop="8dp"/>

        <!-- Spinner chọn audio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn audio phát âm"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <Spinner
            android:id="@+id/spinnerAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnHuySuaTu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#EDBFBF"
                android:text="Hủy bỏ"/>

            <Button
                android:id="@+id/btnLuu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#EDBFBF"
                android:text="Lưu thay đổi"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
