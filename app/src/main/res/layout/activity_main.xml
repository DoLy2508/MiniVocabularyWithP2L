<?xml version="1.0" encoding="utf-8"?>
<!-- Layout gốc là CoordinatorLayout, rất tốt để quản lý các thành phần cố định như menu bottom -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- SỬA 1: Bọc toàn bộ nội dung (trừ thanh menu) vào một ScrollView -->
    <!-- ScrollView cho phép người dùng cuộn nếu nội dung dài hơn màn hình nhỏ -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="?attr/actionBarSize"> <!-- QUAN TRỌNG: Chừa khoảng trống ở dưới cho thanh menu -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- PHẦN ĐẦU: TRANG CHỦ + ICON -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Trang chủ"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Thông báo"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/anhthongbao" />

                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Cài đặt"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/anhcaidat" />
            </LinearLayout>

            <!-- Thông báo -->
            <TextView
                android:id="@+id/tvThongbao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#FFB952"
                android:padding="12dp"
                android:text="Mỗi ngày một từ – Mở rộng cả thế giới! \n Tích lũy từ vựng – Bứt phá tiếng Anh!"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Hàng: Tiến độ và Luyện nghe -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <!-- Tiến độ -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_tiendo"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/tiendo"
                        android:contentDescription="Theo dõi tiến độ"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Theo dõi tiến độ\nSố từ đã học"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Luyện nghe -->
                <LinearLayout
                    android:id="@+id/layoutLuyenPhatAm"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_luyennghe"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/nghe"
                        android:contentDescription="Luyện phát âm"/>

                    <TextView
                        android:id="@+id/tvluyenphatam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Luyện phát âm"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Chủ đề từ vựng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingBottom="8dp"
                android:text="Chủ đề từ vựng"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Các nút chủ đề -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAnimail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:minHeight="80dp"
                    android:backgroundTint="#90cbf7"
                    android:drawableTop="@drawable/animals"
                    android:text="Animals"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

                <Button
                    android:id="@+id/btnFood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:minHeight="80dp"
                    android:backgroundTint="#a6d6a4"
                    android:drawableTop="@drawable/food"
                    android:text="Food"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

                <Button
                    android:id="@+id/btnTravel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:minHeight="80dp"
                    android:backgroundTint="#ffe087"
                    android:drawableTop="@drawable/travel"
                    android:text="Travel"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

                <Button
                    android:id="@+id/btnJobs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:minHeight="80dp"
                    android:backgroundTint="#feac93"
                    android:drawableTop="@drawable/jobs"
                    android:text="Jobs"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>
            </LinearLayout>

            <!-- Các chức năng phụ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNhiemVu"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#8af2f2"
                    android:drawableStart="@drawable/checklist"
                    android:text="Nhiệm vụ học tập"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>

                <Button
                    android:id="@+id/btnGame"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#eda9fc"
                    android:drawableStart="@drawable/game"
                    android:text="Trò chơi ghép từ"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- SỬA 2: Đặt thanh menu làm con trực tiếp của CoordinatorLayout -->
    <include
        android:id="@+id/thanh_menu"
        layout="@layout/thanh_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" /> <!-- `layout_gravity="bottom"` sẽ ghim nó xuống dưới cùng -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>
