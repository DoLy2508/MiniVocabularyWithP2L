<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF0F5"
    android:padding="24dp"
    tools:context="com.example.setting.SettingActivity">

    <!-- Nút Thoát (Back Arrow) nằm góc trên bên trái -->
    <ImageButton
        android:id="@+id/btnExitSetting"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Quay lại"
        android:scaleType="centerInside"
        android:layout_gravity="start"
        app:tint="#808080"/>

    <!-- Header -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cài Đặt"
        android:textColor="#D81B60"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Thông tin User -->
    <LinearLayout
        android:id="@+id/layoutProfileInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_edittext_hong"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/chotbieutuong"
            android:background="@android:color/transparent"
            android:contentDescription="User Avatar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvLabelUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản hiện tại:"
                android:textColor="#888888"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user@example.com"
                android:textColor="#D81B60"
                android:textSize="18sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Chuyển đổi màu nền (Dark Mode) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tvDarkModeLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chế độ ban đêm (Dark Mode)"
            android:textColor="#333333"
            android:textSize="16sp"/>

        <Switch

            android:id="@+id/switchDarkMode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:thumbTint="#D81B60"
            android:trackTint="#FFB6C1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFB6C1"
        android:layout_marginBottom="32dp"/>

    <!-- Nút Đăng xuất -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Đăng Xuất"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#808080"
        app:cornerRadius="25dp"/>

</LinearLayout>